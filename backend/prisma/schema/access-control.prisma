// BreakGlassLog: Audit of emergency access overrides
model BreakGlassLog {
  id          String   @id @default(uuid()) @db.Uuid
  actorId     String   @db.Uuid // Who broke the glass
  patientId   String   @db.Uuid // Whose record was accessed
  reason      String   @db.Text // User-provided justification
  
  accessTime  DateTime @default(now()) @db.Timestamptz(6)
  
  // The system must create a high-priority alert for Security Officers
  reviewed    Boolean  @default(false)
  reviewedBy  String?  @db.Uuid
  reviewNote  String?  @db.Text
  
  @@index([actorId])
  @@index([patientId])
  @@map("break_glass_logs")
}
