// Service: Centralized Clinical Service Catalog
// Used for both marketing display and as a reference for procedure plans

model ClinicalService {
  id          String   @id @default(uuid()) @db.Uuid
  code        String   @unique @db.VarChar(100)
  name        String   @db.VarChar(255)
  description String   @db.Text
  category    String   @db.VarChar(100) // surgical, non-surgical, hand, face, breast, etc.
  
  // Marketing Data
  imageUrl    String?  @db.VarChar(1000)
  isEnabled   Boolean  @default(true)
  displayOrder Int     @default(0)
  
  // Audit
  createdAt   DateTime @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime @updatedAt @db.Timestamptz(6)
  version     Int      @default(1)
  
  doctors     DoctorProfile[] @relation("DoctorServices")
  
  @@index([code])
  @@index([category])
  @@index([isEnabled])
  @@map("clinical_services")
}
