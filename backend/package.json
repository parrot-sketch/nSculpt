{
  "name": "surgical-ehr-backend",
  "version": "1.0.0",
  "description": "Enterprise-grade Aesthetic Surgery EHR System - NestJS Backend",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "schema:merge": "node prisma/scripts/merge-schema.js",
    "schema:generate": "npm run schema:merge && npx prisma generate && npm run postinstall --prefix node_modules/@prisma/client",
    "schema:migrate": "npm run schema:merge && npx prisma migrate dev",
    "schema:migrate:safe": "bash scripts/safe-migrate.sh",
    "schema:generate:safe": "bash scripts/safe-generate.sh",
    "db:studio": "npx prisma studio",
    "db:migrate": "npm run schema:merge && npx prisma migrate deploy",
    "db:migrate:safe": "bash scripts/docker-migrate.sh",
    "db:generate:safe": "bash scripts/docker-generate.sh",
    "db:check": "bash scripts/check-db-connection.sh",
    "db:fix-shadow": "bash scripts/fix-shadow-db.sh",
    "db:fix-missing": "bash scripts/fix-missing-migration.sh",
    "db:seed": "ts-node prisma/seed.ts",
    "db:import-patients": "ts-node prisma/import-patients-from-excel.ts",
    "db:validate": "node scripts/validate-db-connection.js",
    "validate:env": "../scripts/validate-env.sh"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/serve-static": "^4.0.2",
    "@prisma/client": "^5.22.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/passport-jwt": "^4.0.1",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "@types/zxcvbn": "^4.4.5",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.7",
    "nestjs-cls": "^6.2.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^2.4.5",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.2",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pdf-parse": "^1.1.5",
    "@types/uuid": "^9.0.7",
    "@types/xlsx": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "prisma": "^5.22.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "xlsx": "^0.18.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": {
            "types": [
              "jest",
              "node"
            ]
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s",
      "!src/**/*.spec.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
